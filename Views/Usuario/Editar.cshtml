@model GerenciamentoUsuarios.Models.Usuario

@{
    var mensagem = TempData["MensagemEditar"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Editar</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GerenciamentoUsuarios.styles.css" asp-append-version="true" />
    
    <script src="https://kit.fontawesome.com/88cbac72fc.js" crossorigin="anonymous" defer></script>
</head>
<body class="editarBody">
    <section class="editar">
        <a asp-action="Listagem"><i class="fa-solid fa-chevron-left"></i></a>
        <form class="editarForm" asp-action="Editar">
            <h1>Editar @Model.Nome</h1>
            <div>
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" type="text">
            </div>
            <div>
                <label asp-for="Senha">Senha</label>
                <input asp-for="Senha" type="password">
            </div>
            <div class="admin-form">
                <label asp-for="Admin">Administrador</label>
                <input asp-for="Admin" type="checkbox">
            </div>
            <button type="submit" value="" class="btn btnLogin">Salvar</button>

            @if (!string.IsNullOrEmpty(mensagem))
            {
                <script>
                    alert('@mensagem');
                </script>
            }
        </form>
    </section>
</body>
</html>


